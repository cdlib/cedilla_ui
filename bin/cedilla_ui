#!/bin/bash
# cedilla_ui admin script
# jff 03/13/2015

OP=$1
if [ ! -d "$CDLA_HOME" ]; then
  echo "CDLA_HOME environment variable not set or not a directory."
  exit 1
fi
source ${CDLA_HOME}/conf/cdla_env
HOME="${CDLA_HOME}/apps/cedilla_ui"
PID="${CDLA_HOME}/apps/cedilla_ui/cedilla_ui.pid"
NAME="cedilla_ui"

function start {
  echo "starting $NAME"
  if [ -f "${PID}" ]; then
    echo "Cedilla_ui appears to already be running, based on the presence of ${PID}."
    return 1
  fi
  cd ${HOME}
  grunt serve &
  if [ $? -ne 0 ]; then
    echo "Cedilla start failed."
    return 1
  fi
  echo $! > $PID
  sleep 10
  echo "$NAME started"
}

function stop {
  echo "Stopping $NAME"
  if [ ! -f "${PID}" ]; then
    echo "pid file not found; assuming process is already stopped"
    exit 0
  fi
  read PIDN <${PID}
  kill -2 ${PIDN}
  if [ $(ps -p ${PIDN} | wc -l) -eq 2 ]; then
    echo "Process ${PIDN} was still up, killed with signal 9"
    kill -9 ${PIDN}
  fi
  sleep 5 
  rm ${PID}
  echo "$NAME stopped"
}
 
function restart {
  stop
  sleep 5
  start
}

function test {
  cd $HOME
  grunt test 
}

${OP}
